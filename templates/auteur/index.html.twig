{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Auteur index</h1>

    <table class="table" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Biographie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i, auteur in auteurs %}
            <tr>
                <td>{{ i+1 }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.biographie }}</td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">Afficher</a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">Editer</a>
                    <a href="{{ path('auteur_delete', {'id': auteur.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrements trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('auteur_new') }}">Nouveau Auteur</a>
{% endblock %}
