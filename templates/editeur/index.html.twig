                    <a href="{{ path('editeur_delete', {'id': editeur.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'enregistrements trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('editeur_new') }}">Nouveau editeur</a>
{% endblock %}
