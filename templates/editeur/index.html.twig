    <table class="table" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEditeur</th>
                <th>Pays</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i, editeur in editeurs %}
            <tr>
                <td>{{ i+1 }}</td>
                <td>{{ editeur.nomEditeur }}</td>
                <td>{{ editeur.pays }}</td>
                <td>{{ editeur.adresse }}</td>
                <td>{{ editeur.telephone }}</td>
                <td>
                    <a href="{{ path('editeur_show', {'id': editeur.id}) }}">Afficher</a>
